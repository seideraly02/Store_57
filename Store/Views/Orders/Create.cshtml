    @model Order

    @{
        ViewBag.Title = "Создать заказ";
        Layout = "_Layout";
    }

    <h2></h2>
    <div class="row">
        
        <div class="col-md-6">
            <form asp-action="Create" asp-controller="Orders" method="post">
                <div class="form-group">
                    <label for="">
                        Имя покупателя
                        <input class="form-control" type="text" asp-for="Name">
                    </label>
                </div>
                <div class="form-group">
                    <label for="">
                        Адрес доставки
                        <input class="form-control" type="text" asp-for="Address">
                    </label>
                </div>
                <div class="form-group">
                    <label for="">
                        Номер телефона
                        <input class="form-control" type="text" asp-for="ContactPhone">
                    </label>
                </div>
                <div class="form-group">
                    <label for="">
                        Найменование товара
                        <input class="form-control" value="@Model.Phone.Name" type="text" disabled>
                        <input type="hidden" asp-for="PhoneId" value="@Model.Phone.Id">
                    </label>
                </div>
                <button class="btn btn-primary" type="submit">Заказать</button>
            </form>
        </div>
    </div>
