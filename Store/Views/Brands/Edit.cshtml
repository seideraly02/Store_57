@model Brand

@{
    ViewBag.Title = "Редактировать бренд";
    Layout = "_Layout";
}

<h2>Редактировать бренд</h2>

<div class="row">
    <form asp-action="Create" asp-controller="Brands" method="post">
        <div class="form-group">
            <label for="brandName">Наименование бренда </label>
            <input id="brandName" type="text" asp-for="Name"  class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label for="brandEmail">Email</label>
            <input id="brandEmail" type="text" asp-for="Email" class="form-control">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label for="brandDate">Дата основания</label>
            <input id="brandDate" type="date" asp-for="DateFoundation" class="form-control">
            <span asp-validation-for="DateFoundation"></span>
        </div>
        <div style="text-align: end">
            <a href="@Url.Action("Create","Brands")">Назад</a>
            <button class="btn btn-primary" type="submit">Сохранить</button>
        </div>
            
    </form>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
