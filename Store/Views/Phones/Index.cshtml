@model List<Phone>;

@{
    ViewBag.Title = "Смартфоны";
    Layout = "_Layout";
}

<h2>Список смартфонов</h2>
<a asp-controller="Phones" asp-action="Create">Добавить телефонов</a>
<div class="table_section">

    @if (Model.Count == 0)
    {
        <p>Список пуст</p>
    }
    else
    {
         <table class="table">
             <tbody>
             <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Бренд</th>
                <th>Стоймость</th>
                 <th>Действие</th>
                 <th></th>
            </tr>
            @foreach (var phone in Model)
            {
                <tr>
                    <td>@phone.Id</td>
                    <td>@phone.Name</td>
                    <td>@phone.Brand.Name</td>
                    <td>@phone.Price</td>
                   
                    <td>
                        <a asp-action="Edit" asp-controller="Phones"
                           asp-route-phoneId="@phone.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        
                        <a asp-action="Delete" asp-controller="Phones"
                           asp-route-id="@phone.Id">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                        
                        <a asp-action="Create" asp-controller="Orders"
                           asp-route-phoneId="@phone.Id">
                            <i class="fas fa-store"></i>
                        </a>
                        
                        <a asp-action="Details" asp-controller="Phones"
                           asp-route-id="@phone.Id">
                            <i class="fas fa-search-plus"></i>
                        </a>
                    </td>
                    <td>
                        <a href="@Url.Action("Reviews","Phones",new {phoneId = phone.Id})">Оставить отзыв </a>
                    </td>
                </tr>
            }
        </table>
    }
</div>